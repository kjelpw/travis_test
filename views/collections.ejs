<%- include('partials/header') -%>
<%- include('partials/banner') -%>

<div id="frontpage-content" class="row no-side-margin section content">
	<div id="sidebar" class="col-md-3 .col-sm-4">
		<h3>Browse by</h3>
		<hr>
		<%- include('partials/frontpage-facets') -%>
	</div>

	<div id="page-content" class="col-md-9 .col-sm-8">
		<div id="home-collections">
			<a id="collections"></a>
			<h3>Collections</h3>
			<hr>

			<% if(error) { %>
	  			<h5><%- error %></h5>
	  		<% } else { %>
	  			<%- include('partials/paginator') -%>
				<div class="row">
					<% for (var i = 0; i < collections.length; i++) { %>
						<div class="col-sm-3 collection-thumb">
							<dl class="item">
								<a href="<%= root_url %>/collection/<%= collections[i].pid %>">
									<dt>
										<div class="item-thumb">
											<img src="<%= root_url %>/datastream/<%= collections[i].pid %>/TN" alt="<%= collections[i].title %>">
										</div>
									</dt>
									<dd>
										<div class="item-details">
											<h4 class="item-title"><%= collections[i].title %></h4>
										</div>
									</dd>
								</a>
							</dl>
						</div>
					<% } %>
				</div>
				<%- include('partials/paginator') -%>
			<% } %>
		</div>
	</div>
</div>

<script>
	localStorage.setItem("ADVANCED_SEARCH_FORM_STATE", null);
</script>

<%- include('partials/footer') -%>

